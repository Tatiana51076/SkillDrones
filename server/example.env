# Database Configuration
POSTGRES_DB=drone_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dron2025
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
PGDATA=/var/lib/postgresql/data/pgdata

# Server Configuration
SERVER_PORT=8081
SERVER_CONTEXT_PATH=/api
SERVER_COMPRESSION_ENABLED=true

# Application Settings
SPRING_PROFILES_ACTIVE=dev
APPLICATION_NAME=Drone Analytics Service
APPLICATION_VERSION=1.0.0

# JPA & Hibernate
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_FORMAT_SQL=true
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# File Upload
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB
APP_UPLOAD_TEMP_DIR=./uploads/temp
APP_UPLOAD_ALLOWED_EXTENSIONS=.xlsx,.xls,.csv

# Reporting
APP_REPORT_IMAGE_WIDTH=1200
APP_REPORT_IMAGE_HEIGHT=800
APP_REPORT_RETENTION_DAYS=30

# Logging
LOGGING_LEVEL_COM_DRONEAPP=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE=DEBUG
LOGGING_FILE_NAME=logs/drone-analytics.log

# Security (future use)
JWT_SECRET=your-jwt-secret-key-2025
JWT_EXPIRATION=86400000

# External APIs (future use)
ROSREESTR_API_URL=https://api.rosreestr.ru
GIS_LAB_DATA_URL=https://data.gis-lab.info

# Swagger
API_DOCS_PATH=/v3/api-docs
SWAGGER_UI_PATH=/swagger-ui.html